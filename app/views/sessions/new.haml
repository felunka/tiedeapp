.card.mt-3
  %h5.card-header
    Login

  .card-body
    = simple_form_for :user, url: session_path do |f|
      = f.input :email
      = f.input :password, as: :password
      = f.submit 'Login', class: 'btn btn-primary mt-2'
  - if @token.present?
    .card-footer
      = t 'login.no_account'
      = link_to t('login.create_account'), new_user_path(token: @token)
