.order
  - if grid.ordered_by?(column)
    - if grid.descending
      = link_to(datagrid_order_path(grid, column, false), class: 'asc') do
        = icon 'sort-up'
    - else
      = link_to(datagrid_order_path(grid, column, true), class: 'desc') do
        = icon 'sort-down'
  - else
    = link_to(datagrid_order_path(grid, column, false), class: 'asc') do
      = icon 'sort'
