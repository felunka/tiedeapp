.card.mt-3
  %h5.card-header.d-flex.justify-content-between.align-items-center
    = t('model.event._name')
    .d-flex.model-buttons
      - if @event.id.present?
        = button_to t('helpers.submit.delete'), event_path(@event), class: 'btn btn-danger', method: :delete
      = button_to t('helpers.submit.cancel'), events_path, class: 'btn btn-secondary', method: :get

  .card-body
    = simple_form_for @event do |f|
      = f.input :name
      = f.input :location
      = f.input :description, as: :text
      = f.input :event_start, as: :date, html5: true
      = f.input :event_end, as: :date, html5: true
      = f.input :deadline_signup, as: :date, html5: true

      = f.input :base_fee_member, as: :currency
      = f.input :base_fee_guest, as: :currency

      = f.input :fee_member, as: :currency
      = f.input :fee_student, as: :currency
      = f.input :fee_childen, as: :currency
      = f.input :fee_guest, as: :currency

      = f.input :fee_member_single_room, as: :currency
      = f.input :fee_guest_single_room, as: :currency
        
      = f.submit class: 'btn btn-primary mt-2'
