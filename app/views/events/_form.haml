.card.mt-3
  %h5.card-header.d-flex.justify-content-between.align-items-center
    = t('model.event._name')
    .row
      - if @event.id.present?
        .col.p-0
          = button_to t('helpers.submit.delete'), event_path(@event), class: 'btn btn-danger', method: :delete
      .col
        = button_to t('helpers.submit.cancel'), events_path, class: 'btn btn-secondary', method: :get

  .card-body
    = simple_form_for @event do |f|
      = f.input :name
      = f.input :location
      = f.input :description, as: :text
      = f.input :event_start, as: :date, html5: true
      = f.input :event_end, as: :date, html5: true
      = f.input :deadline_signup, as: :date, html5: true

      = f.input :base_fee_member do
        .input-group
          %span.input-group-text=t 'number.currency.format.unit'
          = f.input_field :base_fee_member, class: 'form-control'
      = f.input :base_fee_guest do
        .input-group
          %span.input-group-text=t 'number.currency.format.unit'
          = f.input_field :base_fee_guest, class: 'form-control'

      = f.input :fee_member do
        .input-group
          %span.input-group-text=t 'number.currency.format.unit'
          = f.input_field :fee_member, class: 'form-control'
      = f.input :fee_student do
        .input-group
          %span.input-group-text=t 'number.currency.format.unit'
          = f.input_field :fee_student, class: 'form-control'
      = f.input :fee_childen do
        .input-group
          %span.input-group-text=t 'number.currency.format.unit'
          = f.input_field :fee_childen, class: 'form-control'
      = f.input :fee_guest do
        .input-group
          %span.input-group-text=t 'number.currency.format.unit'
          = f.input_field :fee_guest, class: 'form-control'

      = f.input :fee_member_single_room do
        .input-group
          %span.input-group-text=t 'number.currency.format.unit'
          = f.input_field :fee_member_single_room, class: 'form-control'
      = f.input :fee_guest_single_room do
        .input-group
          %span.input-group-text=t 'number.currency.format.unit'
          = f.input_field :fee_guest_single_room, class: 'form-control'
        
      = f.submit class: 'btn btn-primary mt-2'
