.card.mt-3
  %h5.card-header.d-flex.justify-content-between.align-items-center
    Familientag
    .row
      - if @event.id.present?
        .col.p-0
          = button_to 'LÃ¶schen', event_path(@event), class: 'btn btn-danger', method: :delete
      .col
        = button_to 'Abbrechen', events_path, class: 'btn btn-secondary', method: :get

  .card-body
    = simple_form_for @event do |f|
      = f.input :name
      = f.input :location
      = f.input :description, as: :text
      = f.input :event_start, as: :date, html5: true
      = f.input :event_end, as: :date, html5: true
      = f.input :deadline_signup, as: :date, html5: true
      = f.submit 'Speichern', class: 'btn btn-primary mt-2'